# http://gnomefiles.org/app.php?soft_id=1059

LOGFILE=`mktemp -t git_status.XXXXXX`

git status "$@" > $LOGFILE
zenity --text-info --title="Git: Status" --filename=$LOGFILE --width=600 --height=400 --window-icon="`dirname $0`/git.png"
rm -f $LOGFILE
