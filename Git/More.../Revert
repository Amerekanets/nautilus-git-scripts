# http://marius.scurtescu.com/?p=102
# http://gnomefiles.org/app.php?soft_id=1059

LOGFILE=`mktemp -t git_revert.XXXXXX`

if [ -z $NAUTILUS_SCRIPT_SELECTED_FILE_PATHS ] ; then
    git revert . > $LOGFILE
else
    git revert "$@" > $LOGFILE
fi

zenity --text-info --title="Git: Revert" --filename=$LOGFILE --width=600 --height=400 --window-icon="`dirname $0`/git.xpm"
rm -f $LOGFILE
